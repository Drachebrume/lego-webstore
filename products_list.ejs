<script src="/javascripts/products_list_search.js"></script>
<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
  <br>
    <% if ( status !== 'undefined' ) { %>
      <% if ( status === 'success' ) { %>
        <div class="alert alert-success">
          <h5> Bonjour <strong><%= session.firstname %></strong> ! Vous êtes connecté(e).</h5>
        </div>
      <% }; %>
      <% if ( status === 'logout' ) { %>
        <div class="alert alert-danger">
          <h5> Vous avez été déconnecté(e). </h5>
        </div>
      <% }; %>
      <% if ( status === 'error' ) { %>
        <div class="alert alert-danger">
          <h5> Erreur. L'identifiant ou le mot de passe sont erronés.</h5>
        </div>
      <% }; %>
      <% if ( status === 'suppr' ) { %>
        <div class="alert alert-primary">
          <h5> Votre compte a été supprimé avec succès. Au revoir !</h5>
        </div>
      <% }; %>
    <% }; %>
  </div>
  <div class="col-1"></div>
</div>
<div class="row">
  <div class="col-1"></div>
  <div class="col-3">
    <br>
    <div class="alert alert-danger">
      <h5>Cette fonctionnalité n'est pas implémentée.</h5>
    </div>
    <h2>Produits</h2>
  </div
  <div class="col-7"></div>
  <div class="col-1"></div>
</div>

<div class="row">
  <div class="col-1"></div>
  <div class="col-lg-3">
    <p class="lead">Recherche</p>
    <input type="text" class="form-control" name="recherche" onchange="products_list_search(this.value)" placeholder="Rechercher un produit"/>
    <hr/>

    <p class="lead">Catégorie</p>
    <% cat1.forEach( categ => { %>
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="<%= categ.name %>">
      <label class="custom-control-label" for="<%= categ.name %>"><%= categ.name %></label>
    </div>
    <% }); %>
    <hr/>

    <p class="lead">Prix</p>
    <input type="radio" name="prix" value="asc"> Croissant<br/>
    <input type="radio" name="prix" value="desc"> Décroissant<br/>
  </div>

  <div class="col-lg-7 border-left">
    <div class="card-columns">

      <% prod1.forEach( produ => { %>
        <div class="card" style="height : 500px">
          <img class="card-img-top" src="<%=produ.img0%>" style="padding: 1em; height : 350px" />
          <div class="card-body">
            <h6 class="card-subtitle text-muted"><%= produ.name2 %></h6>
            <h5 class="card-title"><a style="color : black" href="/produits/<%=produ.id%>"><%= produ.name %></a></h5>
            <p class="font-weight-light float-left" style="font-size:1.5em"><strong><%= produ.price %>€</strong></p>
            <p class="float-right">
              <a href="/produits/<%=produ.id%>" class="btn btn-primary"><i class="fas fa-shopping-cart"></i></a>
            </p>
          </div>
        </div>
      <% }); %>

    </div>
  </div>
  <div class="col-1"></div>
</div>